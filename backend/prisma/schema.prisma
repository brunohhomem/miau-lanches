generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id       Int      @id @default(autoincrement())
  nome     String
  endereco String
  telefone String
  pedidos  Pedido[]
}

model Bebida {
  id        Int     @id @default(autoincrement())
  descricao String
  preco     Float   @default(0.0)
  hasAcucar Boolean
  pedido    Pedido? @relation(fields: [pedidoId], references: [id])
  pedidoId  Int?
}

model Ingrediente {
  id          Int      @id @default(autoincrement())
  descricao   String
  preco       Float    @default(0.0)
  isAdicional Boolean
  lanches     Lanche[]
  Pedido      Pedido?  @relation(fields: [pedidoId], references: [id])
  pedidoId    Int?
}

model Lanche {
  id           Int           @id @default(autoincrement())
  descricao    String
  preco        Float         @default(0.0)
  ingredientes Ingrediente[]
  pedidos      Pedido[]
}

model Pedido {
  id          Int           @id @default(autoincrement())
  data        DateTime      @default(now())
  descricao   String
  clienteId   Int
  cliente     Cliente       @relation(fields: [clienteId], references: [id])
  lanches     Lanche[]
  bebidas     Bebida[]
  adicionais  Ingrediente[]
  preco       Float         @default(0.0)
  observacoes String[]      @default([])
}
